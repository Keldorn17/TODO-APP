<Window x:Class="TODO.MVVM.View.EditTodoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODO.MVVM.View" 
        xmlns:viewmodel="clr-namespace:TODO.MVVM.ViewModel" 
        xmlns:utils="clr-namespace:TODO.Utils" d:DataContext="{d:DesignInstance Type=viewmodel:EditTodoViewModel}"
        mc:Ignorable="d"
        Height="600" Width="500"
        MinHeight="600" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <utils:PriorityLevelConverter x:Key="PriorityLevelConverter"/>
    </Window.Resources>
    
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0"
                  CornerRadius="0"
                  CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource MainWindowBrush}"
            BorderBrush="{DynamicResource PrimaryTextBrush}"
            BorderThickness="1"
            CornerRadius="10" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Window Title -->
            <TextBlock Text="Edit Todo"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       FontSize="22"
                       Margin="20, 0, 0, 0"/>

            <!-- Window Controls -->
            <StackPanel Grid.Column="1" Grid.Row="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,5,5,5">
                <utils:HoverButton 
                    x:Name="btnMinimize"
                    Content="—" 
                    Style="{StaticResource ActionButton}"
                    hoverColor="{DynamicResource WaButtonsBrush}"
                    Click="Btn_Minimize"/>
                <utils:HoverButton
                    x:Name="btnClose"
                    Content="X"
                    Style="{StaticResource ActionButton}"
                    hoverColor="{DynamicResource WaExitBrush}"
                    Click="Btn_Exit"/>
            </StackPanel>

            <!-- Main Content -->
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="20,0,20,20">
                
                <!-- Title Section -->
                <TextBox Style="{StaticResource TitleTbox}" 
                         Tag="Title"
                         Text="{Binding CopyTodo.Title}"/>

                <!-- Description Section -->
                <TextBox Style="{StaticResource DescriptionTbox}" 
                         Text="{Binding CopyTodo.Description}"
                         Tag="Description"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"/>

                <!-- Priority Section -->
                <ComboBox Style="{DynamicResource ComboBoxStyle1}" 
                          ItemsSource="{Binding PriorityList}"
                          SelectedValue="{Binding CopyTodo.Priority.Level, Mode=TwoWay, Converter={StaticResource PriorityLevelConverter}}"
                          SelectedValuePath="."
                          Tag="Set Priority"/>

                <!-- Title Section
                <TextBlock Text="Title" 
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           FontSize="14"
                           Margin="0,10,0,5"/>
                <utils:PlaceholderTextBox
                    Text="{Binding CopyTodo.Title}" 
                    PlaceholderText="Title"
                    FontSize="16"
                    Height="40"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    TextWrapping="Wrap"
                    Padding="5"/>
                 -->
                
                <!-- Description Section
                <TextBlock Text="Description" 
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           FontSize="14"
                           Margin="0,15,0,5"/>
                <utils:PlaceholderTextBox 
                         Text="{Binding CopyTodo.Description}" 
                         PlaceholderText="Description"
                         FontSize="16"
                         Height="100"
                         VerticalContentAlignment="Top"
                         HorizontalAlignment="Stretch"
                         AcceptsReturn="True"
                         Padding="5"
                         VerticalScrollBarVisibility="Auto"/>
                 -->
                
                <!-- Priority Section
                <TextBlock Text="Priority" 
                          Foreground="{DynamicResource SecondaryTextBrush}"
                          FontSize="14"
                          Margin="0,15,0,5"/>
                <ComboBox ItemsSource="{Binding PriorityList}"
                          SelectedItem="{Binding CopyTodo.Priority}"
                          Style="{StaticResource EditComboBoxTheme}"/>
                 -->
                <!-- Deadline Section
                <TextBlock Text="Deadline" 
                            Foreground="{DynamicResource SecondaryTextBrush}"
                            FontSize="14"
                            Margin="0,15,0,5"/>
                <DatePicker SelectedDate="{Binding CopyTodo.Deadline}"
                            FontSize="16"
                            Height="40"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Stretch"
                            Padding="5"
                            Style="{StaticResource EditDatePickerTheme}"/>
                -->
                <!-- Buttons Section
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Cancel"
                            Width="100"
                            Height="35"
                            Margin="0,0,10,0"
                            FontSize="14"
                            Command="{Binding CancelCommand}"/>
                    <Button Content="Save"
                            Width="100"
                            Height="35"
                            FontSize="14"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
                -->
            </StackPanel>
        </Grid>
    </Border>
</Window>