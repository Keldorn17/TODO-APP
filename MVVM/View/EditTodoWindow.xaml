<Window x:Class="TODO.MVVM.View.EditTodoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODO.MVVM.View" xmlns:viewmodel="clr-namespace:TODO.MVVM.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:EditTodoViewModel}"
        xmlns:utils="clr-namespace:TODO.Utils"
        mc:Ignorable="d"
        Height="600" Width="400"
        MinHeight="600" MinWidth="500"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0"
                  CornerRadius="0"
                  CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource MainWindowBrush}"
        CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Edit Todo"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       FontSize="22"
                       Margin="20, 0, 0, 0"/>
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                <TextBox Text="{Binding Title}" 
                         Margin="20, 10, 20, 10"
                         FontSize="16"
                         Height="40"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Stretch"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>
                <TextBox Text="{Binding Description}" 
                         Margin="20, 10, 20, 10"
                         FontSize="16"
                         Height="100"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Stretch"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>
                <ComboBox ItemsSource="{Binding PriorityList}"
                          SelectedItem="{Binding Priority}"
                          Margin="20, 10, 20, 10"
                          FontSize="16"
                          Height="40"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Stretch"/>
                <Button Content="Save"
                        Command="{Binding SaveCommand}"
                        Margin="20, 10, 20, 10"
                        FontSize="16"
                        Height="40"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <StackPanel Grid.Column="2" Grid.Row="0"
                Orientation="Horizontal"
                Margin="5 5 0 5">

                    <utils:HoverButton 
                        x:Name="btnMinimize"
                        Content="—" 
                        Style="{StaticResource ActionButton}"
                        hoverColor="{DynamicResource WaButtonsBrush}"
                        Click="Btn_Minimize"/>
                    <utils:HoverButton
                        x:Name="btnMaximize"
                        Content="❐" 
                        Style="{StaticResource ActionButton}"
                        hoverColor="{DynamicResource WaButtonsBrush}"
                        Click="Btn_Maximize"/>
                    <utils:HoverButton
                        x:Name="btnClose"
                        Content="X"
                        Style="{StaticResource ActionButton}"
                        hoverColor="{DynamicResource WaExitBrush}"
                        Click="Btn_Exit"/>

                </StackPanel>


            </Grid>

        </Grid>
    </Border>
</Window>
