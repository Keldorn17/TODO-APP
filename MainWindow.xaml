<Window x:Class="TODO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODO"
        xmlns:viewModel="clr-namespace:TODO.MVVM.ViewModel"
        xmlns:utils="clr-namespace:TODO.Utils"
        mc:Ignorable="d"
        Height="600" Width="920"
        MinHeight="600" MinWidth="920"
        WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0"
                      CornerRadius="0"
                      CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource MainWindowBrush}"
            CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Todo App"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       FontSize="22"
                       Margin="20, 0, 0, 0"/>

            <StackPanel Grid.Row="1">

                <RadioButton Content="Personal"
                             Height="50"
                             Foreground="{DynamicResource SecondaryTextBrush}"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding HomeViewCommand}"/>
                <RadioButton Content="Shared"
                             Height="50"
                             Foreground="{DynamicResource SecondaryTextBrush}"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="All"
                             Height="50"
                             Foreground="{DynamicResource SecondaryTextBrush}"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>

            </StackPanel>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="130"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox Width="250"
                         Height="40"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Margin="5"
                         Grid.Column="0"
                         Grid.RowSpan="2"
                         Style="{StaticResource TextboxTheme}"/>


                <StackPanel Grid.Column="2" Grid.Row="0"
                            Orientation="Horizontal"
                            Margin="5 5 0 5">

                    <Border Style="{StaticResource DropdownSettingsBorder}">
                        <Button Style="{StaticResource DropdownButtonStyle}">
                            <StackPanel>
                                <Button Style="{StaticResource DropdownButton}">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Viewbox Height="12">
                                            <Path Data="{StaticResource ProfileIcon}"
                                                  Fill="{DynamicResource SecondaryTextBrush}" Stretch="Fill"/>
                                        </Viewbox>
                                        <TextBlock Text=" Profile"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Separator Width="120"/>

                                <Button Style="{StaticResource DropdownButton}">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Viewbox Height="12">
                                            <Path Data="{StaticResource SettingsIcon}"
                                                  Fill="{DynamicResource SecondaryTextBrush}" Stretch="Fill"/>
                                        </Viewbox>
                                        <TextBlock Text=" Settings"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Separator Width="120"/>

                                <Button Content="Switch to Light Theme"
                                        Click="Btn_ToggleTheme" 
                                        Style="{StaticResource DropdownButton}"
                                        Width="150"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <utils:HoverButton 
                        x:Name="btnMinimize"
                        Content="—" 
                        Style="{StaticResource ActionButton}"
                        hoverColor="{DynamicResource WaButtonsBrush}"
                        Click="Btn_Minimize"/>
                    <utils:HoverButton
                        x:Name="btnMaximize"
                        Content="❐" 
                        Style="{StaticResource ActionButton}"
                        hoverColor="{DynamicResource WaButtonsBrush}"
                        Click="Btn_Maximize"/>
                    <utils:HoverButton
                        x:Name="btnClose"
                        Content="X"
                        Style="{StaticResource ActionButton}"
                        hoverColor="{DynamicResource WaExitBrush}"
                        Click="Btn_Exit"/>

                </StackPanel>


            </Grid>

            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}"/>

        </Grid>
    </Border>

</Window>
