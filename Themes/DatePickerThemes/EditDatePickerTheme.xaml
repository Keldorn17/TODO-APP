<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Control}" x:Key="BaseInputStyle">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    
    <Style TargetType="{x:Type DatePicker}" x:Key="EditDatePickerTheme" BasedOn="{StaticResource BaseInputStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DatePicker}">
                    <Border CornerRadius="10"
                            Background="{DynamicResource PrimaryBrush}">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" Color="{DynamicResource DarkerContrastColor}" Opacity="0.5"/>
                        </Border.Effect>
                        <Grid>
                            <Rectangle StrokeThickness="1"/>
                            <DatePicker Margin="1"
                                        SelectedDate="{TemplateBinding SelectedDate}"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        VerticalContentAlignment="Center"
                                        Padding="5"
                                        Foreground="{DynamicResource PrimaryTextBrush}"
                                        x:Name="TheDatePicker"/>

                            <TextBlock IsHitTestVisible="False"
                                       Text="Select a date"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10, 0, 0, 0"
                                       FontSize="11"
                                       Foreground="{DynamicResource PrimaryTextBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedDate, ElementName=TheDatePicker}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>