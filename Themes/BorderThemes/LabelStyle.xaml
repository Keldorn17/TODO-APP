<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="CategoryLabelStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SecondaryBrush}" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="4 2" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="5,0,5,0" />
        <Setter Property="MaxWidth" Value="120"/>
        <Setter Property="MinWidth" Value="40"/>
    </Style>

    <Style x:Key="CategoryLabelStyleBlue" BasedOn="{StaticResource CategoryLabelStyle}" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource LabelBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource LabelBackgroundBrushBrush}" />
    </Style>
    
</ResourceDictionary>