<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="TodoCardTemplate">
        <Border Background="#353340" CornerRadius="10" Padding="10" Margin="5" Width="200" Height="150">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" Color="#22202f" Opacity="0.5" />
            </Border.Effect>
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding IsCompleted}" Margin="5"/>
                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16" Foreground="LightGray"/>
                </StackPanel>
                <TextBlock Text="{Binding Description}" FontSize="12" Foreground="LightGray" Margin="5"/>
            </StackPanel>
        </Border>
    </DataTemplate>

</ResourceDictionary>